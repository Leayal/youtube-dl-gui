<UserControl x:Class="youtube_dl_gui.Controls.YoutubeVideoFormatViewModel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:youtube_dl_gui.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" x:Name="myself">
    <Border>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Label VerticalAlignment="Center" HorizontalAlignment="Center" Content="{Binding ElementName=myself, Path=Codec, Mode=OneTime}" />
            <ComboBox VerticalAlignment="Center" HorizontalAlignment="Left" Grid.Column="1" x:Name="qualitySelection" />
        </Grid>
    </Border>
</UserControl>
